.container.py-5
  .row.justify-content-center
    .col-md-6.col-lg-4
      .card.shadow
        .card-body.p-4
          %h1.card-title.text-center.mb-4 Reset Password

          %p.text-muted.text-center.mb-4
            Enter your email address and we'll send you instructions to reset your password.

          = form_with url: passwords_path, data: { testid: "password-reset-form" } do |form|
            .mb-3
              = form.label :email_address, "Email address", class: "form-label"
              = form.email_field :email_address, class: "form-control", required: true, autofocus: true, autocomplete: "email", data: { testid: "email-input" }

            .d-grid.gap-2.mb-3
              = form.submit "Send Reset Instructions", class: "btn btn-primary", data: { testid: "submit-button" }

            .text-center
              = link_to "Back to Sign In", new_session_path, class: "text-decoration-none"
