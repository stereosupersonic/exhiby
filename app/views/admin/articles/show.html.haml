.admin-articles-show{ data: { testid: "admin-articles-show" } }
  .d-flex.justify-content-between.align-items-center.mb-4
    %h1{ data: { testid: "article-title" } }= @article.title
    .btn-group
      = link_to t("admin.articles.show.edit"), edit_admin_article_path(@article), class: "btn btn-primary", data: { testid: "edit-article-button" }
      = link_to t("admin.articles.show.back"), admin_articles_path, class: "btn btn-outline-secondary"

  - if @article.cover_image.attached?
    .card.mb-4
      .card-body
        = image_tag @article.cover_image.variant(resize_to_limit: [600, 300]), class: "img-fluid rounded", alt: @article.title

  .card.mb-4
    .card-header
      .d-flex.justify-content-between.align-items-center
        %span.badge{ class: @article.published? ? "bg-success" : "bg-secondary" }
          = @article.status_name
        - if @article.published_at.present?
          %small.text-muted= l(@article.published_at, format: :long)
    .card-body
      .article-content{ data: { testid: "article-content" } }
        = @article.content

  .text-muted
    %small
      = t("activerecord.attributes.article.author")
      = @article.author.email_address
