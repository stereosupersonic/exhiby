= form_with model: [:admin, @article], class: "needs-validation", data: { testid: "article-form" } do |form|
  - if @article.errors.any?
    .alert.alert-danger
      %ul.mb-0
        - @article.errors.full_messages.each do |message|
          %li= message

  .mb-3
    = form.label :title, t("admin.articles.form.title_label"), class: "form-label"
    = form.text_field :title, class: "form-control #{'is-invalid' if @article.errors[:title].any?}", required: true, data: { testid: "article-title" }
    - if @article.errors[:title].any?
      .invalid-feedback= @article.errors[:title].first

  - cover_thumbnail = @article.cover_media_item&.file&.attached? ? url_for(@article.cover_media_item.file.variant(resize_to_limit: [100, 100])) : ""
  .mb-3{ data: { controller: "media-item-selector", "media-item-selector-search-url-value": search_admin_media_items_path, "media-item-selector-selected-id-value": @article.cover_media_item_id.to_i, "media-item-selector-selected-title-value": @article.cover_media_item&.title.to_s, "media-item-selector-selected-thumbnail-value": cover_thumbnail } }
    = form.label :cover_media_item_id, t("admin.articles.form.cover_image_label"), class: "form-label"
    = form.hidden_field :cover_media_item_id, data: { "media-item-selector-target": "input" }
    .position-relative{ data: { "media-item-selector-target": "selected" }, class: (@article.cover_media_item_id.present? ? "d-none" : "") }
      %label.visually-hidden{ for: "article-cover-search" }= t("admin.articles.form.search_media_items")
      %input#article-cover-search.form-control{ type: "text", placeholder: t("admin.articles.form.search_media_items"), data: { action: "input->media-item-selector#search", "media-item-selector-target": "search" }, autocomplete: "off" }
      .position-absolute.bg-white.border.rounded.shadow-sm.w-100.d-none{ style: "z-index: 1000; max-height: 300px; overflow-y: auto;", data: { "media-item-selector-target": "results" } }
    .mt-2{ data: { "media-item-selector-target": "preview" }, class: (@article.cover_media_item_id.blank? ? "d-none" : "") }

  .mb-3
    = form.label :content, t("admin.articles.form.content_label"), class: "form-label"
    = form.rich_text_area :content, data: { testid: "article-content" }

  .row.mb-3
    .col-md-6
      = form.label :status, t("admin.articles.form.status_label"), class: "form-label"
      = form.select :status, Article::STATUSES.map { |s| [I18n.t("article_statuses.#{s}"), s] }, {}, class: "form-select", data: { testid: "article-status" }

    .col-md-6
      = form.label :published_at, t("admin.articles.form.published_at_label"), class: "form-label"
      = form.datetime_local_field :published_at, class: "form-control", data: { testid: "article-published-at" }

  .d-flex.gap-2
    = form.submit @article.persisted? ? t("admin.articles.form.submit_update") : t("admin.articles.form.submit_create"), class: "btn btn-primary", data: { testid: "submit-article" }
    = link_to t("admin.articles.form.cancel"), admin_articles_path, class: "btn btn-outline-secondary"
